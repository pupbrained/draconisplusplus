<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>System Information</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <div class="container">
    <h1>Draconis++ System Information</h1>
    <table>
      <tr>
        <th>Property</th>
        <th>Value</th>
      </tr>
      {{#properties}}
      <tr>
        <td class="property-name">{{name}}</td>
        <td>
          {{^hasError}}{{value}}{{/hasError}}
          {{#hasError}}<span class="error">{{error}}</span>{{/hasError}}
        </td>
      </tr>
      {{/properties}}
    </table>
    <footer>Generated by Draconis++ v{{version}}</footer>
  </div>
  <script>
    (() => {
      if (window.hotReloadingInitialized) return;

      window.hotReloadingInitialized = true;

      let lastModified = '0';

      async function checkForUpdates() {
        try {
          const response = await fetch('/hot_reload_check');
          if (!response.ok) return;
          const serverLastModified = await response.text();

          if (lastModified === '0')
            lastModified = serverLastModified;
          else if (lastModified !== serverLastModified) {
            console.log('Changes detected, reloading page...');
            window.location.reload();
          }
        } catch (error) {
          console.error('Hot reload check failed:', error);
        }
      }

      checkForUpdates();
      setInterval(checkForUpdates, 1000);
    })();
  </script>
</body>

</html>